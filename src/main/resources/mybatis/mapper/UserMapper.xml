<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.capstone.mapper.UserMapper">

    <sql id="userColumns">
        u_id
        , pw
		, name
        , bank
		, account
		, location
		, phone
    </sql>
    <!-- parameterType: 쿼리 실행에 필요한 parameter 타입 지정
         resultType: 쿼리 실행 결과를 매핑할 타입
         #{}: 전달받은 parameter 값-->
    <insert id="insertUser" parameterType="UserDto">
        INSERT INTO user (
        <include refid="userColumns" />
        ) VALUES (
        NULL
        , #{pw}
        , #{name}
        , #{bank}
        , #{account}
        , #{location}
        , #{phone}
        )
    </insert>

    <select id="checkUser" parameterType="UserDto" resultType="LoginUserDto">
        SELECT phone, pw FROM user WHERE phone=#{phone} and pw=#{pw}
    </select>

    <update id="insertUserNeighbor" parameterType="UserNeighborDto">
        UPDATE user SET u_x=#{u_x}, u_y=#{u_y}, road_address=#{road_address}, address=#{address} WHERE u_id=#{u_id};
    </update>
</mapper>